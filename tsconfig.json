{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "exclude": [
      "src"
    ],
    "include": [
      "server"
    ]
  },
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "es2017",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include",
      "es6"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceRoot": ".",
    "baseUrl": ".",
    "types": [
      "react",
      "react-dom"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
